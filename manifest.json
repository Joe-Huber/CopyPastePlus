{
  "manifest_version": 3,
  "name": "CopyPaste+",
  "version": "1.0",
  "description": "Expand the functionality of copy paste.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ]
}
